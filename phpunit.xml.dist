<?xml version="1.0"?>
<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite name="default">
			<file>./tests/tests/smoke.php</file>
			<exclude>./tests/tests/old.php</exclude>
		</testsuite>
		<testsuite name="tdd">
			<directory suffix=".php">./tests/tests/tdd/</directory>

		</testsuite>
	</testsuites>
	<php>
        <env name="APP_ENV" value="testing"/>
    </php>
</phpunit>
